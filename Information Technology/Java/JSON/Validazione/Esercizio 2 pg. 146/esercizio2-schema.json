{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "Rubrica",
    "description": "Schema JSON di validazione di una rubrica telefonica",
    "type": "object",
    "properties": {
        "first_name": {"type": "string"},
        "last_name": {"type": "string"},
        "phone": {"type": "string"},
        "address": {
            "street": {"type": "string"},
            "number": {"type": "integer"},
            "city": {"type": "string"},
            "postcode": {"type": "string"},
            "country": {"type": "string"}
        }
    },
    "required": ["first_name", "last_name", "address", "street", "number", "city", "country"]
}